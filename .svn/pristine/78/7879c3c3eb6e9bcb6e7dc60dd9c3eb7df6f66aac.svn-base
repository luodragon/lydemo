<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">
    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
    <ImageView
        android:id="@+id/iv_happybuy"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/gv_img"
        />
        <LinearLayout
            android:id="@+id/ll_right_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="4dp"
            >
            <TextView
                android:id="@+id/tv_happybuy_name"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textSize="13sp"
                android:text="珍妮面部全身怯角质男女款"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ProgressBar
                    android:id="@+id/pb_buy_percent"
                    android:layout_width="70dp"
                    android:layout_height="8dp"
                    style="@style/mProgress_horizontal"
                    android:layout_centerVertical="true"
                    android:max="10"
                    android:progress="5"
                    />
                <TextView
                    android:id="@+id/tv_percent_num"
                    android:layout_toRightOf="@id/pb_buy_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="16sp"
                    />
                <TextView
                    android:id="@+id/tv_join_happybuy_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:layout_toLeftOf="@id/lable_join_buy"
                    android:layout_gravity="right|center_vertical"
                    android:textColor="@color/colorRed"
                    android:textSize="16sp"
                    />

                    <TextView
                        android:id="@+id/lable_join_buy"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="人团" />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_original_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="￥389"
                android:textColor="@color/colorBg"
                android:textSize="15sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
            <TextView
                android:id="@+id/label_hotbuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拼购价:"
                android:textColor="@color/colorRed"
                />
            <TextView
                android:id="@+id/tv_price_join_happybuy"
                android:layout_toRightOf="@id/label_hotbuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorRed"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="89.00"
                />

                <Button
                    android:id="@+id/btn_buy_immediate"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/btn_buy_immediate"
                    android:text="@string/btn_buy_immediate" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>