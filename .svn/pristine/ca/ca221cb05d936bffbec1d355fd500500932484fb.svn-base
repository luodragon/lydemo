<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.youth.banner.Banner xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="375dp"
        app:banner_indicator_gravity="right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_price_now"
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:text="￥1500"
        android:textColor="@color/colorRed"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/banner" />

    <TextView
        android:id="@+id/tv_price_old"
        android:layout_width="123dp"
        android:layout_height="25dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="28dp"
        android:text="￥1299"
        android:textColor="@color/colorBlack"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/tv_price_now"
        app:layout_constraintTop_toBottomOf="@+id/banner" />

    <TextView
        android:id="@+id/tv_ping_num"
        android:layout_width="80dp"
        android:layout_height="36dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="15dp"
        android:drawableLeft="@mipmap/icon_ping"
        android:gravity="center"
        android:text="10人团"
        android:textColor="@color/colorRed"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/banner" />
    <TextView
        android:id="@+id/tv_promote_sales"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:text="促销"
        android:textSize="10sp"
        android:gravity="center"
        android:background="@color/colorRed"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintTop_toBottomOf="@+id/tv_price_now"
        />
    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="253dp"
        android:layout_height="40dp"
        android:text="荣耀20青春版AMOLED屏幕指纹4000mAh大电池 20W快充"
        android:textSize="15sp"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toEndOf="@+id/tv_promote_sales"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintTop_toBottomOf="@+id/tv_price_now"
        />
    <Button
        android:id="@+id/btn_share"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_marginEnd="15dp"
        android:drawableLeft="@drawable/ic_share"
        android:text="分享"
        android:paddingLeft="10dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/btn_share"
        app:layout_constraintTop_toBottomOf="@+id/tv_ping_num"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/tv_label_mail"
        android:layout_width="122dp"
        android:layout_height="15dp"
        android:text="快递：[包邮{偏远地区除外}]"
        android:textSize="10sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_name"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/tv_month_sales"
        android:layout_width="80dp"
        android:layout_height="15dp"
        android:textSize="10sp"
        android:text="月销售: 21113"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_name"
        app:layout_constraintStart_toEndOf="@+id/tv_label_mail"
        />
    <TextView
        android:id="@+id/tv_city"
        android:layout_width="80dp"
        android:layout_height="15dp"
        android:textSize="10sp"
        android:text="地区：惠州"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_name"
        app:layout_constraintStart_toEndOf="@+id/tv_month_sales"
        />
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorGray"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_city"
        />
    <TextView
    android:id="@+id/tv_label"
    android:layout_width="wrap_content"
    android:layout_height="18dp"
    android:text="快乐抢购2人团"
    android:textSize="12sp"
    android:textColor="@color/colorBlack"
    android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/divider"
    />
    <TextView
        android:id="@+id/tv_label1"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="查看详情"
        android:textSize="12sp"
        android:textColor="@color/colorBlack"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        />

    <TextView
        android:id="@+id/tv_label2"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:text="一键参团  -  抢中发货  -  未中退款 （奖励红包）"
        android:textColor="@color/colorRed"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_label1"
        />
    <TextView
        android:id="@+id/tv_label_hotbuy_information"
        android:layout_width="70dp"
        android:layout_height="18dp"
        android:text="抢购信息"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        app:layout_constraintTop_toBottomOf="@id/tv_label2"
        app:layout_constraintStart_toStartOf="parent"
        />
    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorGray"
        app:layout_constraintTop_toBottomOf="@id/tv_label_hotbuy_information"
        />
        <ImageView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:src="@mipmap/zhanwei"
            app:layout_constraintTop_toBottomOf="@id/divider1"
            app:layout_constraintStart_toStartOf="parent"
            />
    <ImageView
        android:id="@+id/image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@mipmap/zhanwei"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintStart_toEndOf="@id/image1"
        />
    <ImageView
        android:id="@+id/image3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@mipmap/zhanwei"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintStart_toEndOf="@id/image2"
        />
    <ImageView
        android:id="@+id/image4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@mipmap/zhanwei"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintStart_toEndOf="@id/image3"
        />
    <ImageView
        android:id="@+id/image5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@mipmap/zhanwei"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintStart_toEndOf="@id/image4"
        />
    <ImageView
        android:id="@+id/image6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/zhanwei"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintStart_toEndOf="@id/image5"
        />
    <TextView
        android:id="@+id/tv_hotbuy_num"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:text="...共130人抢购>"
        android:gravity="right"
        android:layout_marginTop="18.5dp"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintStart_toEndOf="@id/image6"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="50dp"
        android:background="@color/colorGray"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        />
    <TextView
        android:id="@+id/tv_label_hotbuy_success"
        android:layout_width="100dp"
        android:layout_height="18dp"
        android:text="@string/text_hotbuy_success"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/btn_hotbuy_back"
        android:layout_width="213dp"
        android:layout_height="36dp"
        android:text="@string/text_back"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_hotbuy_back"
        app:layout_constraintTop_toBottomOf="@id/tv_label_hotbuy_success"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>