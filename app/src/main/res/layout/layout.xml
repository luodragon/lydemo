<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/tv_user_level"
            android:drawableRight="@drawable/ic_toright"
            android:drawableLeft="@drawable/ic_user_level"
            android:text="用户等级"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:drawablePadding="16dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:paddingRight="16dp"
            />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/tv_vip"
        android:drawableRight="@drawable/ic_toright"
        android:drawableLeft="@drawable/ic_my_vip"
        android:text="VIP值:120"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:drawablePadding="16dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:paddingRight="16dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/tv_cash"
        android:drawableRight="@drawable/ic_toright"
        android:drawableLeft="@drawable/ic_my_cash"
        android:text="现金券:120"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:drawablePadding="16dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:paddingRight="16dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/tv_douyin"
        android:drawableRight="@drawable/ic_toright"
        android:drawableLeft="@drawable/ic_douyin"
        android:text="抖音快手引流"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:drawablePadding="16dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:paddingRight="16dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/tv_wechat"
        android:drawableRight="@drawable/ic_toright"
        android:drawableLeft="@drawable/ic_we_chat"
        android:text="微信引流"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:textStyle="bold"
        android:drawablePadding="16dp"
        android:textSize="15sp"
        android:paddingRight="16dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorGray"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/tv_realname"
        android:drawableRight="@drawable/ic_toright"
        android:drawableLeft="@drawable/ic_real_name"
        android:text="实名认证"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:textStyle="bold"
        android:drawablePadding="16dp"
        android:textSize="15sp"
        android:paddingRight="16dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/tv_video_manage"
        android:drawableRight="@drawable/ic_toright"
        android:drawableLeft="@drawable/ic_video_manage"
        android:text="视频/直播管理"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:textStyle="bold"
        android:drawablePadding="16dp"
        android:textSize="15sp"
        android:paddingRight="16dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/tv_address_manage"
        android:drawableRight="@drawable/ic_toright"
        android:drawableLeft="@drawable/ic_address"
        android:text="地址管理"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:textStyle="bold"
        android:drawablePadding="16dp"
        android:textSize="15sp"
        android:paddingRight="16dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/tv_myfocus"
        android:drawableRight="@drawable/ic_toright"
        android:drawableLeft="@drawable/ic_my_focus"
        android:text="我的关注"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:textStyle="bold"
        android:drawablePadding="16dp"
        android:textSize="15sp"
        android:paddingRight="16dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/tv_mycollect"
        android:drawableRight="@drawable/ic_toright"
        android:drawableLeft="@drawable/ic_my_collect"
        android:text="我的收藏"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:textStyle="bold"
        android:drawablePadding="16dp"
        android:textSize="15sp"
        android:paddingRight="16dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorGray"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/tv_service_inline"
        android:drawableRight="@drawable/ic_toright"
        android:drawableLeft="@drawable/ic_service"
        android:text="在线客服"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:textStyle="bold"
        android:drawablePadding="16dp"
        android:textSize="15sp"
        android:paddingRight="16dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/tv_about"
        android:drawableRight="@drawable/ic_toright"
        android:drawableLeft="@drawable/ic_about"
        android:text="关于我们"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:textStyle="bold"
        android:drawablePadding="16dp"
        android:textSize="15sp"
        android:paddingRight="16dp"
        />
</LinearLayout>
